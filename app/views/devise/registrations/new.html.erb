<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :baby_nickname %> <em>(6 characters maximum)</em><br />
    <%= f.text_field :baby_nickname, autofocus: true, maxlength: "6" %>
  </div>
  
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, use_month_numbers: true,　start_year: 2015, end_year: Time.now.year, default: Date.new(2020, 1, 1) %>
  </div>
  
  <!--<div class="field">-->
  <!--  <%= f.label :gender %><br />-->
  <!--  <%= f.text_field :gender, autofocus: true %>-->
  <!--</div>-->
  
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.label :男の子  %>
    <%= f.radio_button :gender, :man%>
    <%= f.label :女の子  %>
    <%= f.radio_button :gender, :woman %>
</div>
  
  <!--<div class="field">-->
  <!--  <%= f.label :image %>(必ず画像を選択してください)<br />-->
  <!--  <%= f.file_field :image %>-->
  <!--</div>-->
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
